mixin property_detail(property)
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    .panel.panel-primary
      .row.padall
        .col-xs-12.col-sm-12.col-md-3.col-lg-3
          span
          img(src=property.thumbnail)
        .col-xs-12.col-sm-12.col-md-9.col-lg-9
          .clearfix
            .pull-left
              span.fa.fa-dollar.icon  #{util.formatNumber(property.price,  '#,#00.00')}
            .pull-right
              | | #{property.squareFeet} SqFt | #{property.bedrooms} Bedrooms | #{property.bathrooms} bathrooms
          div
            h4
              span.fa.fa-map-marker.icon  #{property.address}
            #{property.features}
            span.fa.fa-lock.icon.pull-right  #{property.status}